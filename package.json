{
  "name": "balanced-k-groups",
  "version": "1.0.0-alpha.0",
  "description": "A TypeScript library for balanced NÃ—M partitioning with multiple algorithmic strategies",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "docs"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "esbuild src/index.ts --bundle --platform=node --target=node16 --outdir=dist --format=cjs --out-extension:.js=.js --sourcemap --define:process.env.NODE_ENV=\"production\"",
    "build:esm": "esbuild src/index.ts --bundle --platform=node --target=node16 --outdir=dist --format=esm --out-extension:.js=.mjs --sourcemap --define:process.env.NODE_ENV=\"production\"",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:prod": "npm run clean && esbuild src/index.ts --bundle --platform=node --target=node16 --outdir=dist --format=cjs --out-extension:.js=.js --minify --define:process.env.NODE_ENV=\"production\" && esbuild src/index.ts --bundle --platform=node --target=node16 --outdir=dist --format=esm --out-extension:.js=.mjs --minify --define:process.env.NODE_ENV=\"production\" && npm run build:types",
    "dev": "esbuild src/index.ts --bundle --platform=node --target=node16 --outdir=dist --format=cjs --out-extension:.js=.js --watch --define:process.env.NODE_ENV=\"development\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:coverage:ci": "vitest --coverage --reporter=verbose --reporter=json --outputFile=coverage/coverage-summary.json",
    "coverage:report": "npm run test:coverage && echo 'Coverage report generated in coverage/ directory'",
    "coverage:badge": "npm run test:coverage:ci && node scripts/update-coverage-badge.js",
    "bench": "tsx bench/bench.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist coverage",
    "pack:dry": "npm pack --dry-run",
    "size": "npm run build && npm run pack:dry",
    "prepublishOnly": "npm run build && npm run test:coverage"
  },
  "keywords": [
    "partitioning",
    "optimization",
    "algorithm",
    "typescript",
    "balanced",
    "groups",
    "capacity",
    "heuristic",
    "metaheuristic",
    "linear-programming"
  ],
  "author": "Balanced K-Groups Contributors",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "glpk.js": "^4.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mbiganzoli/balanced-k-groups"
  },
  "bugs": {
    "url": "https://github.com/mbiganzoli/balanced-k-groups/issues"
  },
  "homepage": "https://github.com/mbiganzoli/balanced-k-groups#readme",
  "publishConfig": {
    "access": "public"
  }
}
